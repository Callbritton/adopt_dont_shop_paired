<h1><%=@pet.name %></h1>
<p><%= image_tag(@pet.image) %></p>
<p>Description: <%= @pet.description %></p>
<p>Approximate Age: <%= @pet.approximate_age %></p>
<p>Sex: <%= @pet.sex %></p>
<p>Adoption Status: <%= @pet.adoption_status %></p>

<% if favorites.contents.include?(@pet.id) %>
  <p> This pet is already favorited </p>
  <% else %>
<%= button_to "Add to Favorites", "/favorites/#{@pet.id}", method: :patch %>
<%end%>
<br>
<%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %>
<br>
<%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
<br>
<br>
<a href="/pets">Return to Pet Index</a>
<br>
<a href="/">Return to Home</a>
